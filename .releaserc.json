{
  "branches": [
    "+([0-9])?(.{+([0-9]),x}).x",
    "production",
    {
      "name": "homolog",
      "channel": "homolog",
      "prerelease": "homolog"
    }
  ],
  "repositoryUrl": "https://github.com/Funnelchat20/whatsapp-api-golang",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "docs",
            "release": false
          },
          {
            "type": "style",
            "release": false
          },
          {
            "type": "test",
            "release": false
          },
          {
            "type": "chore",
            "release": false
          },
          {
            "type": "build",
            "release": false
          },
          {
            "type": "ci",
            "release": false
          },
          {
            "type": "revert",
            "release": "patch"
          },
          {
            "breaking": true,
            "release": "major"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "âœ¨ Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "ðŸ› Bug Fixes",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "âš¡ Performance Improvements",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "â™»ï¸ Code Refactoring",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "ðŸ“ Documentation",
              "hidden": false
            },
            {
              "type": "style",
              "section": "ðŸ’„ Styles",
              "hidden": true
            },
            {
              "type": "test",
              "section": "âœ… Tests",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "ðŸ”§ Chores",
              "hidden": true
            },
            {
              "type": "build",
              "section": "ðŸ“¦ Build System",
              "hidden": true
            },
            {
              "type": "ci",
              "section": "ðŸ‘· CI/CD",
              "hidden": true
            },
            {
              "type": "revert",
              "section": "âª Reverts",
              "hidden": false
            }
          ]
        },
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file."
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "echo ${nextRelease.version} > VERSION && sed -i 's/\"version\": \"[^\"]*\"/\"version\": \"${nextRelease.version}\"/' manager-whatsapp-api-golang/package.json"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "VERSION", "manager-whatsapp-api-golang/package.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": "ðŸŽ‰ This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version}.\n\nThe release is available on [GitHub release](<github_release_url>).\n\nDocker images:\n- `latest`: latest stable release\n- `v${nextRelease.version}`: this specific version\n- `homolog`: homolog branch",
        "labels": ["released"],
        "releasedLabels": ["released<%= nextRelease.channel ? `-${nextRelease.channel}` : \"\" %>"]
      }
    ]
  ],
  "tagFormat": "v${version}"
}
