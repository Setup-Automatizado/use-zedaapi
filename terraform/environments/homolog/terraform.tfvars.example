# }

# secret_env_mapping = {
#   PARTNER_AUTH_TOKEN = "partner_auth_token"
#   CLIENT_AUTH_TOKEN  = "client_auth_token"
# }

worker_heartbeat_interval = "5s"
worker_heartbeat_expiry   = "20s"
worker_rebalance_interval = "30s"
