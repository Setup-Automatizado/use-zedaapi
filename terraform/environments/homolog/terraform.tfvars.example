# ==================================================
# Homolog Environment - Example Variables
# ==================================================

aws_region = "us-east-1"

vpc_cidr           = "10.2.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]
enable_nat_gateway = false

api_image       = "whatsapp-api:homolog"
app_environment = "homolog"
log_level       = "debug"

db_user     = "whatsmeow"
db_password = "change-me"

redis_auth_token = ""
redis_lock_key_prefix       = "funnelchat"
redis_lock_ttl              = "30s"
redis_lock_refresh_interval = "10s"

s3_bucket_name        = "whatsapp-api-homolog-media"
s3_force_destroy      = true
s3_use_presigned_urls = true
api_base_url          = "http://your-alb-endpoint.us-east-1.elb.amazonaws.com"

# additional_secret_values = {
