aws_region = "us-east-1"

vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]
enable_nat_gateway = true

# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/abcd1234-5678-90ab-cdef-EXAMPLE11111"

api_image       = "123456789012.dkr.ecr.us-east-1.amazonaws.com/whatsapp-api:prod"
app_environment = "production"
log_level       = "info"

db_user     = "whatsmeow"
db_password = "change-me-very-strong-password"
db_instance_class        = "db.r6g.large"
db_allocated_storage     = 100
db_max_allocated_storage = 500

redis_node_type               = "cache.r6g.large"
redis_replicas_per_node_group = 2
redis_auth_token              = ""

s3_bucket_name        = "whatsapp-api-production-media"
s3_force_destroy      = false
s3_use_presigned_urls = true

