# ==================================================
# Staging Environment - Example Variables
# ==================================================
# Copy to terraform.tfvars and adjust values before running `terraform apply`

aws_region = "us-east-1"

vpc_cidr           = "10.1.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]
enable_nat_gateway = true

# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/abcd1234-5678-90ab-cdef-EXAMPLE11111"

api_image       = "123456789012.dkr.ecr.us-east-1.amazonaws.com/whatsapp-api:staging"
app_environment = "staging"
log_level       = "info"

db_user     = "whatsmeow"
db_password = "change-me-strong-password"
db_instance_class        = "db.t4g.medium"
db_allocated_storage     = 20
db_max_allocated_storage = 100

redis_auth_token = ""

s3_bucket_name        = "whatsapp-api-staging-media"
s3_force_destroy      = false
s3_use_presigned_urls = true
api_base_url          = "http://your-alb-endpoint.us-east-1.elb.amazonaws.com"

