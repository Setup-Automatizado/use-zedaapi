# Docker Build Architecture (for local development)
# Auto-detected: amd64 (Intel/AMD) or arm64 (Apple Silicon M1/M2/M3)
# Leave blank for auto-detection based on your system
TARGETARCH=arm64

APP_ENV=development
HTTP_ADDR=0.0.0.0:8080
HTTP_READ_HEADER_TIMEOUT=5s
HTTP_READ_TIMEOUT=15s
HTTP_WRITE_TIMEOUT=30s
HTTP_IDLE_TIMEOUT=120s
HTTP_MAX_HEADER_BYTES=1048576

LOG_LEVEL=INFO

POSTGRES_DSN=postgres://funnelchat:funnelchat@postgres:5432/funnelchat_api?sslmode=disable
POSTGRES_MAX_CONNS=32

WAMEOW_POSTGRES_DSN=postgres://funnelchat:funnelchat@postgres:5432/funnelchat_store?sslmode=disable
WAMEOW_LOG_LEVEL=INFO

REDIS_ADDR=redis:6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS_ENABLED=false

S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_BUCKET=funnelchat-media
S3_ACCESS_KEY=funnelchat
S3_SECRET_KEY=funnelchatsecret
S3_USE_SSL=false
S3_URL_EXPIRATION=30d

SENTRY_DSN=
SENTRY_ENVIRONMENT=local
SENTRY_RELEASE=local-dev

WEBHOOK_DISPATCHER_CONCURRENCY=8
MEDIA_WORKER_CONCURRENCY=4

PROMETHEUS_NAMESPACE=funnelchat_api

PARTNER_AUTH_TOKEN=replace-me
